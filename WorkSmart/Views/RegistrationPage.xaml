<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkSmart.Views.RegistrationPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="fName" Placeholder="First Name"></Entry>
                <Entry x:Name="lName" Placeholder="Last Name"></Entry>
            </StackLayout>
            <Entry x:Name="regEmail" Placeholder="Email" Keyboard="Email"></Entry>
            <Entry x:Name="regPwd" Placeholder="Password" IsPassword="True"></Entry>
            <Entry x:Name="regPwdCon" Placeholder="Confirm Password" IsPassword="True"></Entry>
            <Button Text="Sign Up" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>